<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_answer_img"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/android_logo"
        android:layout_below="@id/toolbar"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_answer_img"
        android:layout_alignTop="@id/iv_answer_img"
        android:layout_toRightOf="@id/iv_answer_img"
        android:gravity="center"
        android:textColor="@color/grey_text"
        android:textSize="@dimen/font_normal"
        android:text="海豚不会游泳" />

    <TextView
        android:id="@+id/tv_professor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_answer_img"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_answer_img"
        android:layout_marginRight="@dimen/item_margin"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="@dimen/font_normal"
        android:text="情感专家" />

    <TextView
        android:id="@+id/tv_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/iv_answer_img"
        android:layout_below="@id/iv_answer_img"
        android:lineSpacingExtra="@dimen/lineSpacingExtra"
        android:text="fjkashdfjkhasdjkf\ndsfjaklsdfj\nasdfjkhaskjdfjk"/>


</RelativeLayout>