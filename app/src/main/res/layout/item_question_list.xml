<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/news_summary_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="1dp"
    app:cardCornerRadius="@dimen/item_margin">
    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_answer_img"
            android:layout_width="28dp"
            android:src="@drawable/android_logo"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_height="28dp" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/font_normal"
            tools:text="海豚不会游泳"
            android:gravity="center"
            android:layout_alignBottom="@id/iv_answer_img"
            android:layout_toRightOf="@id/iv_answer_img"
            android:layout_alignTop="@id/iv_answer_img"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_answer_img"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv_answer_img"
            android:layout_marginRight="@dimen/item_margin"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="@dimen/font_normal"
            android:text="￥10" />
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_below="@id/iv_answer_img"
            android:layout_alignStart="@id/iv_answer_img"
            android:layout_marginBottom="@dimen/fab_margin"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>